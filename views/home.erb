<form action="/event/results/" method="get">
	
	<div class="clearfix">
        <label for="postcode" title="This is a required field">Postcode:</label>
        <div class="input">
            <input id="postcode" name="postcode" type="text">
        </div>
    </div>
    
    <div class="clearfix">
        <label for="radius">Distance:</label>
        <div class="input">
            <select name="radius" id="radius">
                <% DISTANCE.each do |key, value| %>
                    <option value="<%= key %>"><%= value %></option>
                <% end %>
            </select>
        </div>
    </div>
    
    <div class="clearfix">
        <label for="searchType">Type:</label>
        <div class="input">
            <select id="searchType" name="type" class="searchFilter">
                <% CATEGORIES.each do |key, value| %>
                    <option value="<%= key %>"><%= value %></option>
                <% end %>
            </select>
        </div>
    </div>
    
    <div class="clearfix">
        <label for="dateFrom">Date From:</label>
        <div class="input">
            <input type="date" id="dateFrom" name="afterDate">
        </div>
        
        <label for="dateTo">Date To:</label>
        <div class="input">
            <input type="date" id="dateTo" name="beforeDate">
        </div>
    </div>
        
    <div class="input">
		<input type="submit" value="Search" class="btn primary">
	</div>
        
</form>

<h2>Recently added events</h2>
<% if @events.count != 0 %>
	<ul>
	<% @events.each do | event | %>
		<li><a href="/event/<%= event.id %>"><%= event.title %></a></li>
	<% end %>
	</ul>
<% end %>

