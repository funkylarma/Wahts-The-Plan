<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta-Data -->
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="author" content="Adam Chamberlin">
    
    <!-- Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Title -->
    <title><%= @title %></title>
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap//1.3.0/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    
    <!-- JS -->
    
</head>
<body>
	
	<div class="topbar">
		<div class="fill">
			<div class="container">
				<h3>
					<a href="/">Whats the plan</a>
				</h3>
				<ul class="nav">
					<li><a href="/event">View Events</a></li>
					<li><a href="/promoter">Visit Promoters</a></li>
				</ul>
				<% if logged_in? %>
					<p class="pull-right">Logged in as <a href="/promoter/profile" title="Your profile"><%= promoter_name %></a></p>
				<% else %>
					<form action="/promoter/login" method="post" class="pull-right">
						<input type="text" name="email" id="email" placeholder="Email" class="input-small">
						<input type="password" name="password" id="password" placeholder="Password" class="input-small">
						<button class="btn" type="submit">Sign in</button>
					</form>
				<% end %>

			</div><!-- .container -->
		</div><!-- .fill -->
	</div><!-- .topbar -->
	
	<div class="container">
		
		<div class="content">
			
			<div class="page-header">
				<h1>
					<%= @pageTitle %>
					<small><%= @subTitle %></small>
				</h1>
			</div><!-- .page-header -->

			<div id="feedback">
		        <% if flash[:confirm] %>
		            <div class="alert-message success">
		                <%= flash[:confirm] %>
		            </div>
		        <% elsif flash[:error] %>
		            <div class="alert-message error">
		                <%= flash[:error] %>
		            </div>
		        <% end %>
		    </div><!-- #feedback -->
		    
		    <div class="row">
		    	<div class="span10">
		    		<%= yield %>
		    	</div><!-- .span10 -->
		    	<div class="span4">
		    	    <% yield_content :sidebar %>
		    	</div><!-- .span4 -->
		    </div><!-- .row -->
		    
		</div><!-- .content -->
		
		<footer>
			<p>&copy; 2011</p> 
		</footer>
		
	</div><!-- .container -->
  
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
<script src="http://maps.googleapis.com/maps/api/js?sensor=true"></script>
<% yield_content :js_footer %>
    
</body>
</html>