<% content_for :sidebar do %>
    <h3>Event Search</h3>
<!-- maps javascript-->

<form action="/event/results/" method="get">
	    <div class="clearfix">
	        <label for="location" title="This is a required field">Location:</label>
	        <input id="location" name="postcode" type="text" value="<%= @search[:postcode] %>">
	    </div>
	    
